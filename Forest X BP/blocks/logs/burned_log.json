{
	"format_version": "1.16.100",
	"minecraft:block": {
		"description": {
			"identifier": "forest:burned_log",
			"properties": {
				"custom:facing_direction": [
					0,
					1,
					2
				]
			}
		},
		"permutations": [
			{
				"condition": "query.block_property('custom:facing_direction') == 0",
				"components": {
					"minecraft:rotation": [
						0,
						0,
						0
					]
				}
			},
			{
				"condition": "query.block_property('custom:facing_direction') == 1",
				"components": {
					"minecraft:rotation": [
						90,
						0,
						0
					]
				}
			},
			{
				"condition": "query.block_property('custom:facing_direction') == 2",
				"components": {
					"minecraft:rotation": [
						0,
						0,
						90
					]
				}
			}
		],
		"components": {
			"minecraft:loot": "loot_tables/blocks/empty.json",
			"minecraft:destroy_time": 1.5,
			"minecraft:friction": 0.6,
			"minecraft:creative_category": {
				"group": "itemGroup.name.log",
				"category": "nature"
			},
			"minecraft:map_color": "#00ff00",
			"minecraft:on_player_placing": {
				"event": "update_facing_direction"
			},
			"minecraft:unit_cube": {},
			"minecraft:material_instances": {
				"*": {
					"texture": "burned_log",
					"render_method": "opaque"
				},
				"ends": {
					"texture": "burned_log_top",
					"render_method": "opaque"
				},
				"up": "ends",
				"down": "ends"
			},
			"tag:wood": {},
			"minecraft:ticking": {
				"looping": true,
				"range": [
					1,
					2
				],
				"on_tick": {
					"event": "minecraft:ash"
				}
			},
			"minecraft:flammable": {
				"flame_odds": 20,
				"burn_odds": 100
			}
		},
		"events": {
			"update_facing_direction": {
				"set_block_property": {
					"custom:facing_direction": "math.floor(query.cardinal_block_face_placed_on/2)"
				}
			},
			"minecraft:ash": {
				"run_command": {
					"command": [
						"particle minecraft:basic_smoke_particle ~ ~ ~"
					]
				}
			}
		}
	}
}